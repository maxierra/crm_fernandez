<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Alquileres</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .container {
            margin-top: 20px;
        }
        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
            margin-bottom: 20px;
        }
        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }
        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #dc3545; /* Rojo para "Cobrar a Inquilinos" */
            transition: 0.4s;
            border-radius: 34px;
        }
        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: 0.4s;
            border-radius: 50%;
        }
        input:checked + .slider {
            background-color: #28a745; /* Verde para "Pagar a Dueño" */
        }
        input:checked + .slider:before {
            transform: translateX(26px);
        }
        .slider.round {
            border-radius: 34px;
        }
        .slider.round:before {
            border-radius: 50%;
        }
        .table-container {
            display: none;
        }
        .table-container.active {
            display: block;
        }
        .toggle-label {
            font-weight: bold;
            margin: 0 10px;
        }
    </style>
</head>
<body>

      <!-- Incluir el navbar -->
      <%- include('navbar') %>

<div class="container">
    <!-- Toggle Switch -->
    <div class="d-flex align-items-center">
        <span class="toggle-label">Cobrar a Inquilinos</span>
        <label class="switch">
            <input type="checkbox" id="toggleSwitch">
            <span class="slider round"></span>
        </label>
        <span class="toggle-label">Pagar a Dueño</span>
    </div>

    <!-- Tabla de Cobros -->
    <div class="table-container active" id="tablaCobros">
        <h3 class="section-title">Cobros de Alquileres</h3>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Buscar inquilino por ID o nombre">
        </div>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Inquilino</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <tr class="status-paid">
                    <td>001</td>
                    <td>Juan Pérez</td>
                    <td>$15,000</td>
                    <td>01/08/2024</td>
                    <td>Pagado</td>
                    <td><button class="btn btn-success btn-sm" disabled>Pagado</button></td>
                </tr>
                <tr class="status-pending">
                    <td>002</td>
                    <td>Ana García</td>
                    <td>$12,000</td>
                    <td>05/08/2024</td>
                    <td>Pendiente</td>
                    <td><button class="btn btn-primary btn-sm">Registrar Pago</button></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Tabla de Pagos -->
    <div class="table-container" id="tablaPagos">
        <h3 class="section-title">Pagos a Propietarios</h3>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Buscar propietario por ID o nombre">
        </div>
        <table class="table table-bordered">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Propietario</th>
                    <th>Monto</th>
                    <th>Fecha</th>
                    <th>Estado</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                <tr class="status-paid">
                    <td>101</td>
                    <td>María López</td>
                    <td>$15,000</td>
                    <td>02/08/2024</td>
                    <td>Pagado</td>
                    <td><button class="btn btn-success btn-sm" disabled>Pagado</button></td>
                </tr>
                <tr class="status-pending">
                    <td>102</td>
                    <td>Pedro Sánchez</td>
                    <td>$12,000</td>
                    <td>06/08/2024</td>
                    <td>Pendiente</td>
                    <td><button class="btn btn-primary btn-sm">Registrar Pago</button></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script>
    const toggleSwitch = document.getElementById('toggleSwitch');
    const tablaCobros = document.getElementById('tablaCobros');
    const tablaPagos = document.getElementById('tablaPagos');

    toggleSwitch.addEventListener('change', function() {
        if(this.checked) {
            tablaCobros.classList.remove('active');
            tablaPagos.classList.add('active');
        } else {
            tablaCobros.classList.add('active');
            tablaPagos.classList.remove('active');
        }
    });
</script>

</body>
</html>
