<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Pagos ABL</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/abl.css" />
</head>
<body>
    <!-- Incluir el navbar -->
    <%- include('navbar') %>
    <div class="container">
        <h1 class="mt-4">Cargar Pago ABL</h1>

        <!-- Formulario de Búsqueda -->
        <form id="busquedaInquilinoForm" class="mt-4">
            <div class="form-group">
                <label for="search">Buscar propietario</label>
                <input type="text" id="search" class="form-control" required>
            </div>
            <button type="button" class="btn btn-secondary" onclick="buscarInquilino()">Buscar</button>
        </form>

        <!-- Formulario de Carga de Pago ABL -->
        <form id="cargarPagoABLForm" class="mt-4">
            <input type="hidden" id="id_pago" required> <!-- Campo oculto para guardar el ID del pago -->
            <div class="form-group">
                <label for="calle">Calle</label>
                <input type="text" id="calle" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="numero">Número</label>
                <input type="text" id="numero" class="form-control" required>
            </div>
            <input type="hidden" id="nombre" required> <!-- Campo oculto para guardar el nombre del propietario -->
            <div class="form-group">
                <label for="monto_abl">Monto ABL</label>
                <input type="number" id="monto_abl" class="form-control" step="0.01" required>
            </div>
            <div class="form-group">
                <label for="periodo">Periodo</label>
                <input type="month" id="periodo" class="form-control" required>
            </div>
            <button type="button" class="btn btn-primary" onclick="guardarPagoABL()">Guardar</button>
        </form>

        <h2 class="mt-4">Lista de Pagos ABL</h2>
        <table class="table table-bordered mt-2" id="tablaPagosABL">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Calle</th>
                    <th>Número</th>
                    <th>Nombre</th>
                    <th>Monto ABL</th>
                    <th>Periodo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <!-- Las filas se llenarán con JavaScript -->
            </tbody>
        </table>
    </div>

    <script src="/js/abl.js"></script>
</body>
</html>
