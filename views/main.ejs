<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Estilos adicionales aquí */
    </style>
</head>
<body>
    <%- include('navbar') %>
    <!-- Incluye el navbar reutilizable -->
    <div class="container mt-5">
        <h1>Dashboard</h1>
        <div class="row">
            <div class="col-md-6">
                <div class="card text-white bg-success mb-3">
                    <div class="card-header">Contratos Activos</div>
                    <div class="card-body">
                        <h5 class="card-title" id="activos-count">0</h5>
                        <p class="card-text">Número de contratos activos.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card text-white bg-danger mb-3">
                    <div class="card-header">Contratos Inactivos</div>
                    <div class="card-body">
                        <h5 class="card-title" id="inactivos-count">0</h5>
                        <p class="card-text">Número de contratos inactivos.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            // Obtener el conteo de contratos activos
            $.get('/activos', function(data) {
                $('#activos-count').text(data.activos);
            }).fail(function() {
                console.error('Error al obtener el conteo de contratos activos');
            });

            // Obtener el conteo de contratos inactivos
            $.get('/inactivos', function(data) {
                $('#inactivos-count').text(data.inactivos);
            }).fail(function() {
                console.error('Error al obtener el conteo de contratos inactivos');
            });
        });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>