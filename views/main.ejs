<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Efecto hover para las tarjetas */
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        /* Asegurar que todas las tarjetas tengan el mismo tamaño */
        .card {
            min-height: 200px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* Colores personalizados */
        .bg-orange {
            background-color: #f57c00; /* Un tono de naranja */
        }

        .bg-teal {
            background-color: #008080; /* Un tono de teal */
        }

        .bg-pink {
            background-color: #e91e63; /* Un tono de rosa */
        }

        .bg-purple {
            background-color: #9c27b0; /* Un tono de púrpura */
        }

        .bg-lightblue {
            background-color: #03a9f4; /* Un tono de azul claro */
        }

        .bg-yellow {
            background-color: #ffeb3b; /* Un tono de amarillo */
        }
    </style>
</head>
<body>

    <!-- Incluir el navbar -->
    <%- include('navbar') %>

    <div class="container mt-5">
        <h1 class="mb-4">Dashboard</h1>

        <div class="row">
            <!-- Contratos por Vencer -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5 class="card-title">Contratos por Vencer</h5>
                        <p class="card-text">5 contratos están próximos a vencer.</p>
                        <a href="/contratos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Atraso de Expensas -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5 class="card-title">Atraso de Expensas</h5>
                        <p class="card-text">3 expensas con atrasos.</p>
                        <a href="/expensas" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Incremento de Contratos del Mes -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5 class="card-title">Incremento de Contratos</h5>
                        <p class="card-text">Incremento del 10% este mes.</p>
                        <a href="/contratos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Alquileres con Retraso/Deuda -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5 class="card-title">Alquileres con Retraso/Deuda</h5>
                        <p class="card-text">2 alquileres con deuda.</p>
                        <a href="/cobro-alquileres" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Citas para Hoy -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-info">
                    <div class="card-body">
                        <h5 class="card-title">Citas para Hoy</h5>
                        <p class="card-text">4 citas programadas para hoy.</p>
                        <a href="/citas" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Vencimientos Importantes -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-secondary">
                    <div class="card-body">
                        <h5 class="card-title">Vencimientos Importantes</h5>
                        <p class="card-text">2 vencimientos importantes esta semana.</p>
                        <a href="/vencimientos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Nuevos Inquilinos -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-dark">
                    <div class="card-body">
                        <h5 class="card-title">Nuevos Inquilinos</h5>
                        <p class="card-text">3 nuevos inquilinos registrados este mes.</p>
                        <a href="/inquilinos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Saldos a Favor -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-lightblue">
                    <div class="card-body">
                        <h5 class="card-title">Saldos a Favor</h5>
                        <p class="card-text">2 inquilinos con saldo a favor.</p>
                        <a href="/saldos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Documentación Pendiente -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-orange">
                    <div class="card-body">
                        <h5 class="card-title">Documentación Pendiente</h5>
                        <p class="card-text">2 documentos pendientes de revisión.</p>
                        <a href="/documentacion-pendiente" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Reclamos en Proceso de Resolución -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-teal">
                    <div class="card-body">
                        <h5 class="card-title">Reclamos en Proceso de Resolución</h5>
                        <p class="card-text">4 reclamos en proceso de resolución.</p>
                        <a href="/reclamos" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Problemas Reportados -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-pink">
                    <div class="card-body">
                        <h5 class="card-title">Problemas Reportados</h5>
                        <p class="card-text">1 problema reportado pendiente de resolución.</p>
                        <a href="/problemas-reportados" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Actividades Recientes -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-purple">
                    <div class="card-body">
                        <h5 class="card-title">Actividades Recientes</h5>
                        <p class="card-text">5 actividades recientes registradas.</p>
                        <a href="/actividades-recientes" class="btn btn-light">Ver detalles</a>
                    </div>
                </div>
            </div>

            <!-- Nuevas Solicitudes -->
            <div class="col-md-6 col-lg-3 mb-4">
                <div class="card text-white bg-yellow">
                    <div class="card-body">
                        <h5 class="card-title">Nuevas Solicitudes</h5>
                        <p class="card-text">3 nuevas solicitudes recibidas.</p>
                        <a href="/nuevas-solicitudes" class="btn btn-dark">Ver detalles</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
